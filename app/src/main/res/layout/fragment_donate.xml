<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/header_container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/side_nav_bar"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:layout_width="100dp"
                android:layout_marginTop="-10dp"
                android:layout_height="100dp"
                android:scaleType="fitStart"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Block This - FREE"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@+id/imageView"
                android:id="@+id/title_page"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free, Fair and Private"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView"
                android:layout_below="@id/title_page"
                android:layout_toRightOf="@+id/imageView"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_container"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/text_top_donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="@string/donate_page_subtitle"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorLink="?colorPrimary"
                android:layout_below="@+id/header_container"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/install_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Install any of the apps in the Games section.(FREE)"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/text_top_donation"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Install Apps"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:id="@+id/download_games_btn"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/patreon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Become a Patron by commiting to a small, recurring monthly donation on Patreon."
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/text_top_donation"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support on Patreon"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:id="@+id/support_patreon_btn"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/paypal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make a donation via PayPal. Paypal account - sag9@abv.bg"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/text_top_donation"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donate via Paypal"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:id="@+id/support_paypal_btn"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>


            <TextView
                android:id="@+id/thank_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for making this possible."
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/text_top_donation"/>

            <TextView
                android:id="@+id/text_btm1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="Powered by block-this.com"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorLink="?colorPrimary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>